{
  "name": "react-essential-tools",
  "description": "Collection of essential React Hooks and Components ",
  "version": "0.37.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/devianllert/react-essential-tools.git"
  },
  "bugs": {
    "url": "https://github.com/devianllert/react-essential-tools/issues"
  },
  "author": "Ruslan Povolockii <devianllert@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-essential-tools.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react-essential-tools",
    "react",
    "react-hooks",
    "components",
    "hooks",
    "modal",
    "tooltip",
    "animations"
  ],
  "scripts": {
    "start": "npm run storybook",
    "build": "tsdx build",
    "test": "tsdx test --maxWorkers=2 --verbose",
    "test:watch": "tsdx test --watchAll",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:eslint": "tsdx lint src --fix",
    "lint:css": "stylelint **/*.{ts,tsx}",
    "prepare": "tsdx build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-a11y": "^5.3.17",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-transition-group": "^4.2.4",
    "@types/styled-components": "^5.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "jest-styled-components": "^7.0.0",
    "lint-staged": "^10.0.8",
    "np": "5.1.3",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-test-renderer": "^16.13.0",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-loader": "^6.2.1",
    "tsdx": "^0.13.0",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.1.1",
    "react-transition-group": "^4.3.0",
    "styled-components": "^5.0.1"
  }
}
